                  <h2 id="fancy-title-21" class="mk-fancy-title simple-style">
                    <span><%= t "home.great_food" %></span>
                  </h2>
                  <div class="clearboth"></div>
                  <div id="text-block-22" class="mk-text-block">
                    <p>
                      <span><%= t "home.description"%></span>
                    </p>
                    <div class="clearboth"></div>
                  </div>
                  <div id="mk-button-23" class="mk-button-container">
                    <%= link_to t(".view_menu"), dishes_path, target: "_self",
                      class: "mk-button skin-light mk-button--text" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="clearboth"></div>
    </div>
    <div class="clearboth"></div>
