<section class="section admin-site">
  <br><br>
  <div class="col-sm-12 col-xs-12">
    <h1><%= t "admin.admin_management" %></h1>
    <br>
    <div class="bloc col-xs-8 col-xs-offset-2">
      <h3>
        <%= link_to new_admin_user_path do %>
          <i class="fa fa-fw fa-plus"></i><%= t "admin_users.new_admin" %>
        <% end %>
      </h3>
      <table class="table table-hover">
        <thead>
        <tr>
          <th><%= t "admin.email" %></th>
          <th><%= t "admin.date_created" %></th>
          <th><%= t "admin.role" %></th>
          <th><%= t "admin.orders.order.action" %></th>
        </tr>
        </thead>
        <tbody>
        <% @list_admin.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td><%= user.role %></td>
            <td>
              <%= link_to t("button.edit"), edit_admin_user_path(user) %> |
              <%= link_to t("button.delete"), admin_user_path(user),
                method: :delete, data: {confirm: t("button.delete_warning")},
                class: "text-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @list_admin %>
    </div>
  </div>
</section>
