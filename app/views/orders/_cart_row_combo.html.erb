<div class="well">
  <div class="row">
    <div class="col-xs-4 text-center">
      <h4><%= combo.name%></h4>
    </div>
    <div class="col-xs-8">
      <%= form_for order_combo, remote: true do |f| %>
          <div class="col-xs-4 ">
            <h4 class="text-left"> <%= t "order.unit_price" %>
              <span><%= number_to_currency order_combo.price %></span></h4>
            <div id= <%= "order-combo-row-#{order_dish.id}"%>>
              <div id= "<%= "order-combo-total-price-#{order_combo.id}"%>">
                <h4 class="text-left"> <%= t "order.total_price" %>
                  <%= number_to_currency order_combo.total_price %>
                </h4>
              </div>
            </div>
          </div>
          <div class="col-xs-8 row">
            <div class="col-xs-4">
              <%= f.number_field :quantity, value: order_combo.quantity.to_i,
                                 class: "col-xs-8 form-control", id: "quantity-of-order-combo-#{order_combo.id}", min: 1 %>
            </div>
            <div class="col-xs-8 text-left">
              <% if !current_order.isConfirm %>
                  <div class="btn-group">
                    <div class="btn btn-primary"
                         onclick="updateQuantityComboInCart(<%= order_combo.id %>)">
                      <%= t("order.update_quantity")%>
                    </div>
                    <div class="btn btn-danger"
                         onclick="quantityComboInCart(<%= order_combo.id %>)">
                      <%= t("order.delete")%>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
