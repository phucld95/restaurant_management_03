<div class="well" >
  <div class="row">
    <div class="col-xs-4 text-center">
      <h4><%= dish.name %></h4>
    </div>
    <div class="col-xs-8">
      <%= form_for order_dish, remote: true do |f| %>
          <div class="col-xs-4 ">
            <h4 class="text-left"> <%= t "order.unit_price" %>
              <span><%= number_to_currency order_dish.price %></span></h4>
              <div id= <%= "order-dish-row-#{order_dish.id}"%>>
                <div id= "<%= "order-dish-total-price-#{order_dish.id}"%>">
                  <h4 class="text-left"> <%= t "order.total_price" %>
                    <%= number_to_currency order_dish.total_price %>
                  </h4>
                </div>
              </div>
          </div>
          <div class="col-xs-8 row">
            <div class="col-xs-4">
              <%= f.number_field :quantity, value: order_dish.quantity.to_i,
                                 class: "col-xs-8 form-control", id: "quantity-of-order-dish-#{order_dish.id}", min: 1 %>
              <%= f.hidden_field :id, value: order_dish.id %>
            </div>
            <div class="col-xs-8 text-left">
              <% if !current_order.isConfirm %>
                  <div class="btn-group">
                    <div class="btn btn-primary"
                         onclick="updateQuantityDishInCart(<%= order_dish.id %>)">
                      <%= t("order.update_quantity")%>
                    </div>
                    <div class="btn btn-danger"
                         onclick="quantityDishInCart(<%= order_dish.id %>)">
                      <%= t("order.delete")%>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
